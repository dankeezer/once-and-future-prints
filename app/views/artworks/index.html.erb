

<%= javascript_include_tag "http://code.jquery.com/jquery-latest.min.js" %>
<%= javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.js" %>
<%= javascript_include_tag "jquery-photo-resize" %>


<style type = "text/css">

table {
  border-spacing: 0px !important;
}

body {
  display: block;
  margin: 0px;
  overflow: hidden;
  background-color: #e0cebc;
}

td {
  padding: 0px;
  border-spacing: 0px !important;
  margin: 0px; 
}

.overlay {
  position: relative;
  overflow-x: scroll;
}

#status { 
  position: fixed;
  z-index: 10; 
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 10pt;
  font-weight: 300;
  letter-spacing: 2px;
  padding: 3px;
  padding-left: 5px;
  color: white;
  display: none;
}

#statement, #contact {
  background-color: #e0cebc;
  height: 100%;
  width: 1200px;
}

h4, a:link, a:visited, a:hover{
  color: #854a65;
  letter-spacing: 2px;
  font-weight: 300;
  font-size: 16px;
  text-decoration: none !important;
}

h6, a:link, a:visited, a:hover {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 10pt;
  font-weight: 300;
  letter-spacing: 2px;
  color: #854a65;
  display: inline;
}

</style>

<body>
<div id="status"><a href="#statement"><h6>statement</a> | <a href="#contact"></h6>contact</a></span></div>
  <div class="overlay">
    <table width="100%" height="100%">
      <tr>
          <% @artworks.each do |artwork| %>
            <td><div id="<%= artwork.position %>"></a><%= filepicker_image_tag artwork.filepicker_url, h: 1200, fit: "clip" %></div></td>
          <% end %>
          <td><div id="statement">
            <%= render 'statement' %>
          </div></td>
          <td><div id="contact">
            <%= render 'contact' %>
          </div></td>
      </tr>
    </table>
  </div>

<script>
$(function() {
    $('#status a').bind('click',function(event){
        var $anchor = $(this);
        var $overlay = $('.overlay');
        var scrollLeft = $overlay.scrollLeft() + $($anchor.attr('href')).offset().left;
        /*
        if you want to use one of the easing effects:
        $('html, body').stop().animate({
            scrollLeft: $($anchor.attr('href')).offset().left
        }, 1500,'easeInOutExpo');
         */
        $('.overlay').stop().animate({
            scrollLeft: scrollLeft
        }, 1000);

        event.preventDefault();
    });
});
</script>